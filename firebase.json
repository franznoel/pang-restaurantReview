{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "app",
    "headers": [
      {
        "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css|css|js)",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      }
    ]
  }
}
